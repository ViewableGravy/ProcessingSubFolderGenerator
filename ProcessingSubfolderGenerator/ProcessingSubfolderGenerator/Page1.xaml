<Page x:Class="ProcessingSubfolderGenerator.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProcessingSubfolderGenerator"
      mc:Ignorable="d"
      Title="Page1" Width="340" Height="100" Foreground="Black">
    <Grid>

        <TextBox x:Name="ProcessingSketchTxt" HorizontalAlignment="Left" Height="20" Margin="10,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230"/>
        <Button Content="Choose File" HorizontalAlignment="Left" Height="20" Margin="240,38,0,0" VerticalAlignment="Top" Width="90" Click="ProcessingLocationButton_Click"/>
        <Button Content="Next" HorizontalAlignment="Left" Height="20" Margin="240,63,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click"/>
        <Label Content="Enter the location of your processing sketch" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="240" FontSize="11"/>

    </Grid>
</Page>
